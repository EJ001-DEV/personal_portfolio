{
  "name": "django_portfolio",
  "version": 2,
  "builds": [
    {
      "src": "django_portfolio/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb" , 
        "runtime": "python3.9" 
      }
    },    
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }      
    },
    {
      "src": "media/**",
      "use": "@vercel/static",
      "config": {
        "maxAge": 0,
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "django_portfolio/wsgi.py"
    }
  ]
}